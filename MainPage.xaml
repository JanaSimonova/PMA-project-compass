<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pololetni_projekt.MainPage"
             Title="Domovská stránka">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Label x:Name="CompassLabel" Text="Off" HorizontalOptions="Center"/>
            <Border Background="Aqua"
                    Padding="16,8"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40,40,40,40" />
                </Border.StrokeShape>
                <Label x:Name="Direction" Text="Turn on compass to see direction" HorizontalOptions="Center" FontSize="Large" />
            </Border>

            <HorizontalStackLayout>
                
                <Button Text="TurnOn Kompas" BackgroundColor="LightGreen" Clicked="ToggleCompass" WidthRequest="160"/>
                <Button Text="TurnOff Kompas" BackgroundColor="LightCoral" Clicked="OffToggleCompass" WidthRequest="160"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
